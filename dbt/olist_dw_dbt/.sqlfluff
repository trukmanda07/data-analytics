[sqlfluff]
# Core config
templater = dbt
dialect = duckdb
max_line_length = 100
indent_unit = space

# Exclude paths
exclude_rules = L034,L031,L016
# L034: Allow wildcard in SELECT statements (useful for SELECT *)
# L031: Allow table aliases that don't use AS keyword
# L016: Allow long lines in some cases (e.g., long column lists)

[sqlfluff:templater:dbt]
project_dir = .
profiles_dir = ~/.dbt
profile = olist_dw_dbt

[sqlfluff:indentation]
indent_unit = space
tab_space_size = 4
indented_joins = false
indented_ctes = false
indented_using_on = true
template_blocks_indent = true

[sqlfluff:rules]
# Allow trailing commas (useful for git diffs)
allow_trailing_commas = true

[sqlfluff:rules:capitalisation.keywords]
# Capitalization: keywords uppercase (was L010)
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]
# Unquoted identifiers lowercase (was L014)
extended_capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
# Function names lowercase (was L030)
extended_capitalisation_policy = lower

[sqlfluff:rules:layout.indent]
# Indentation settings (was L003)

[sqlfluff:rules:convention.terminator]
# Semi-colon formatting (was L052)
multiline_newline = false
require_final_semicolon = false

[sqlfluff:rules:ambiguous.column_references]
# GROUP BY/ORDER BY column references (was L054)
group_by_and_order_by_style = consistent

[sqlfluff:rules:capitalisation.types]
# Data type formatting (was L063)
extended_capitalisation_policy = upper

[sqlfluff:rules:capitalisation.literals]
# Boolean/null literals lowercase
capitalisation_policy = lower

[sqlfluff:rules:convention.quoted_literals]
# Consistent quotes for quoted literals (was L064)
preferred_quoted_literal_style = single_quotes
